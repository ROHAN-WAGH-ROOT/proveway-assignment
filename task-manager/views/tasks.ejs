<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Tasks</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Your Tasks</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% tasks.forEach(task => { %>
                <tr>
                    <td><%= task.title %></td>
                    <td><%= task.description %></td>
                    <td><%= task.category %></td>
                    <td>
                        <a href="/tasks/<%= task._id %>/edit">Edit</a>
                        <a href="/tasks/<%= task._id %>/delete">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/create-task">Create New Task</a>
</body>
</html>
